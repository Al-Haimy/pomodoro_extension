{
    "name": "Pomodor technique",
    "description": "The Pomodoro Technique is a time management system that encourages people to work with more efficiny",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["storage",  "notifications"],
  
    "background": {
        "scripts": ["background.js"],
        "persistent": true
      },
      "options_page": "./options.html",
      "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
          "16": "logo-16.png",
          "32": "logo-32.png",
          "48": "logo-48.png",
          "128": "logo-128.png"
        }
      },
      "icons":{
        "16": "./logo-16.png",
        "32": "./logo-32.png",
        "48": "./logo-48.png",
        "128": "./logo-128.png"
      }
  }